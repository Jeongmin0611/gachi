<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bitcamp.gachi.register.RegisterDaoImp">
	<insert id="registerInsert" parameterType="com.bitcamp.gachi.register.RegisterVO">
		insert into member(userid,userpwd,grade,username,nickname,birthdate,tel,gender,addr,detailaddr)
	                values(#{userid},#{userpwd},1,#{username},#{nickname},#{birthdate},#{tel},#{gender},#{addr},#{detailaddr})
	               
	</insert>
	<select id="memberLogin" parameterType="com.bitcamp.gachi.register.RegisterVO" resultType="com.bitcamp.gachi.register.RegisterVO">
		select userid,nickname from member where userid=#{userid} and userpwd=#{userpwd} and grade=1
	</select>
	<select id="creatorLogin" parameterType="com.bitcamp.gachi.register.RegisterVO" resultType="com.bitcamp.gachi.register.RegisterVO">
		select userid,nickname from member where userid=#{userid2} and userpwd=#{userpwd2} and grade=2
	</select>
	<select id="adminLogin" parameterType="com.bitcamp.gachi.register.RegisterVO" resultType="com.bitcamp.gachi.register.RegisterVO">
		select userid,nickname from member where userid=#{userid3} and userpwd=#{userpwd3} and grade=3
	</select>
</mapper>